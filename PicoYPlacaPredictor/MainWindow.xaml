<Window x:Class="PicoYPlacaPredictor.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PicoYPlacaPredictor"
        mc:Ignorable="d"
        Title="Pico y Placa Predictor" Height="450" Width="800">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

       
        <Grid Grid.Row="0" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Placa:"/>
            <TextBox Grid.Column="1" x:Name="LicensePlateTextBox"/>
        </Grid>
        
        <TextBlock Grid.Row="1" x:Name="LicensePlateError" Foreground="Red" FontSize="12"/>
        
        <Grid Grid.Row="2" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Fecha:"/>
            <DatePicker Grid.Column="1" x:Name="DatePicker"/>
        </Grid>

        <TextBlock Grid.Row="3" x:Name="DateError" Foreground="Red" FontSize="12"/>


        <Grid Grid.Row="4" Margin="0 0 0 10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="80"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="Hora:"/>
            <TextBox Grid.Column="1" x:Name="TimeTextBox"/>
        </Grid>

        <TextBlock Grid.Row="5" x:Name="TimeError" Foreground="Red" FontSize="12"/>

        <Button Grid.Row="6" 
                Content="Verificar" 
                Width="100" 
                HorizontalAlignment="Center" 
                Margin="0 10 0 10"
                Click="VerifyButton_Click"/>
        
        <TextBlock Grid.Row="7"
           x:Name="ResultTextBlock"
           FontSize="14"
           FontWeight="Bold"
           Text="Resultado aquí..."
           HorizontalAlignment="Center"
           Margin="0 10 0 0"/>

    </Grid>
</Window>
